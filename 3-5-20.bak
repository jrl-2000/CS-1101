(define-struct webpage (url links))
;;a Webpage is a (make-webpage String ListOfWebpage)
;; represents a webpage where
;;    url is the address
;;    links is a list of the pages directly aceessible through links on this page


;;a ListOfWebpage is one of
;;   empty
;;   (cons Webpage ListOfWebpages)

(define GHome (make-webpage "https://web.cs.wpi.edu/~ghamel" empty))
(define CS1101Home (make-webpage "https://web.cs.wpi.edu/~cs1101" empty))
(define CSHome (make-webpage "https://web.cs.wpi.edu" empty))

;;add-link: Webpage Webpage -> void
;;puts a link on the first webpage that directsnto the second webpage
(define (add-link firstpage secondpage)
  (set-webpage-links! firstpage (cons secondpage (webpage-links firstpage))))

(add-link GHome CS1101Home)
(add-link CS1101Home GHome)
(add-link CSHome GHome)
